<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_background1"
    android:clickable="true">
    <!--Top header-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_height">

        <com.thibault.gyft.RoundedImageView
            android:id="@+id/profile_pic"
            android:layout_width="@dimen/profile_pic_size"
            android:layout_height="@dimen/profile_pic_size"
            android:src="@drawable/profile_pic"
            android:layout_marginTop="@dimen/profile_pic_margin"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/profile_name_size"
            android:layout_marginTop="5dp"
            android:text="Thibault de Saint Sernin"
            android:textColor="@color/name_color"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/profile_pic"/>
        <LinearLayout
            android:id="@+id/level_container"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_below="@id/profile_name"
            android:padding="15dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/bonus_icon"
                android:layout_width="@dimen/bonus_size"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@drawable/bonus_icon"
                />
            <ProgressBar
                android:id="@+id/level_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="5" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/menu_background2"
        android:orientation="vertical"
        android:paddingTop="10dp">
        <!--Around Me-->
        <LinearLayout
            android:id="@+id/around_me"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_height"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/aroundme_icon"
                android:layout_marginTop="@dimen/menu_item_icon_margin_top"
                android:layout_marginBottom="@dimen/menu_item_icon_margin_top"
                android:adjustViewBounds="true"
                android:layout_weight="@integer/menu_item_icon_weight"
                android:tint="@color/menu_item_color"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="@integer/menu_item_text_weight"
                android:textColor="@color/menu_item_color"
                android:textSize="@dimen/menu_item_text"
                android:paddingLeft="@dimen/menu_item_text_padding"
                android:paddingStart="@dimen/menu_item_text_padding"
                android:text="Around Me"
                android:textStyle="bold"
                android:padding="10dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <!--Map-->
        <LinearLayout
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_height"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/map_icon"
                android:layout_marginTop="@dimen/menu_item_icon_margin_top"
                android:layout_marginBottom="@dimen/menu_item_icon_margin_top"
                android:adjustViewBounds="true"
                android:layout_weight="@integer/menu_item_icon_weight"
                android:tint="@color/menu_item_color"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="@integer/menu_item_text_weight"
                android:textColor="@color/menu_item_color"
                android:textSize="@dimen/menu_item_text"
                android:paddingLeft="@dimen/menu_item_text_padding"
                android:paddingStart="@dimen/menu_item_text_padding"
                android:text="Map"
                android:textStyle="bold"
                android:padding="10dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <!--Gifts-->
        <LinearLayout
            android:id="@+id/gifts"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_height"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/grey_gift_icon"
                android:layout_marginTop="@dimen/menu_item_icon_margin_top"
                android:layout_marginBottom="@dimen/menu_item_icon_margin_top"
                android:adjustViewBounds="true"
                android:layout_weight="@integer/menu_item_icon_weight"
                android:tint="@color/menu_item_color"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="@integer/menu_item_text_weight"
                android:textColor="@color/menu_item_color"
                android:textSize="@dimen/menu_item_text"
                android:paddingLeft="@dimen/menu_item_text_padding"
                android:paddingStart="@dimen/menu_item_text_padding"
                android:text="Gifts"
                android:textStyle="bold"
                android:padding="10dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <!--Trades-->
        <LinearLayout
            android:id="@+id/trades"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_height"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cart_icon"
                android:layout_marginTop="@dimen/menu_item_icon_margin_top"
                android:layout_marginBottom="@dimen/menu_item_icon_margin_top"
                android:adjustViewBounds="true"
                android:layout_weight="@integer/menu_item_icon_weight"
                android:tint="@color/menu_item_color"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="@integer/menu_item_text_weight"
                android:textColor="@color/menu_item_color"
                android:textSize="@dimen/menu_item_text"
                android:paddingLeft="@dimen/menu_item_text_padding"
                android:paddingStart="@dimen/menu_item_text_padding"
                android:text="Trades"
                android:textStyle="bold"
                android:padding="10dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>